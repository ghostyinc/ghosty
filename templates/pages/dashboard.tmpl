			<div
				x-data="{ is_connected: $store[APP_NAME].is_connected }"
				x-init="
					$watch('$store[APP_NAME].is_connected', value => {
						is_connected = value;
					})
				"
			>
				<button
					x-show="!is_connected"
					@click="$store[APP_NAME].connect_wallet()"
				>
					Connect
				</button>
				<button
					x-show="is_connected"
					@click="$store[APP_NAME].disconnect_wallet()"
				>
					Disconnect
				</button>
