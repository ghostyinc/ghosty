{{define "content"}}
	<div class="w-full h-full flex flex-row">
		<aside class="flex flex-col h-full w-full max-w-60 bg-secondary">
			{{template "header" .}}
		</aside>
		<main class="flex flex-col p-8">
			<div
				x-data="{ pub_key: $store[APP_NAME].pub_key }"
				x-init="
					$watch('$store[APP_NAME].pub_key', value => {
							pub_key = value;
					})
				"
			>
				<span
					x-show="pub_key"
					x-text="pub_key"
					class="text-primary"
				>
				</span>
			</div>

			<div class="absolute bottom-0 right-0">
				<button @click="theme = theme === 'light' ? 'dark' : 'light'">
					Toggle Theme
				</button>
			</div>

			<button
				@click="toast(
					'成功 成功 成功 成功', {
						type: 'success',
						description: 'Something went right',
						position: 'bottom-left',
					}
				)"
			>
				Success
			</button>
			<button
				@click="toast(
					'成功 成功 成功 成功', {
						type: 'warning',
						description: 'Be careful - something bad might happen',
						position: 'bottom-left',
					}
				)"
			>
				Warning
			</button>
			<button
				@click="toast(
					'成功 成功 成功 成功 成功', {
						type: 'danger',
						description: 'Okay, something bad happened',
						position: 'bottom-left',
					}
				)"
			>
				Danger
			</button>
			<button
				@click="toast(
					'成功 成功 成功', {
						type: 'info',
						description: 'Information placed in the top right',
						position: 'top-right',
					}
				)"
			>
				Top right
			</button>
			<button
				@click="toast(
					'成功 成功 成功 成功 成功 ', {
						type: 'success',
						description: 'This is some random long message about the transaction.',
						position: 'bottom-left',
					}
				)"
			>
				Bottom-left
			</button>
			<button
				@click="toast(
					'成功 成功 成功 成功', {
						type: 'default',
						description: 'This is some random long message about the transaction.',
						position: 'top-center',
					}
				)"
			>
				Top center
			</button>
		</main>
	</div>
{{end}}

